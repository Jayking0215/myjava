		Class.forName(driver);
		con=DriverManager.getConnection(url, id, pwd);
		stmt=con.createStatement();
		StringBuilder buf=new StringBuilder("insert into bbs")
					.append(" board_idx, board_title, board_wirter, board_writeDate, board_count, board_content")
					.append("VALUES(10,'"+board_title+"', '"+board_writer+"', SYSDATE, 20, '"+board_content+"')");
		String sql=buf.toString();
		int result=stmt.executeUpdate(sql);					
		
	}catch(Exception e){
		e.printStackTrace();
