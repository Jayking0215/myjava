package day07;
//레이아웃 만들기
import javax.swing.*;
import java.awt.*;

public class MyLayout extends JFrame {

	Container cp;
	JPanel p=new JPanel();//가장 큰 패널
	JPanel p1_1, p1_2;
	JButton b1,b2,b3,b4,b5,b6;
	
	public MyLayout() {
		super("::MyLayout::");
		cp=this.getContentPane();
		cp.add(p);//메인패널

		BorderLayout b=new BorderLayout();//hgap, vgap
		p.setLayout(b);
		
		p1_1=new JPanel(new FlowLayout());//p1_1패널 생성
		p1_2=new JPanel(new FlowLayout());
		
		//배경색
		p.setBackground(Color.white);
		
		b1=new JButton("B1");
		b2=new JButton("B2");
		b3=new JButton("B3");
		b4=new JButton("B4");
		b5=new JButton("B5");
		b6=new JButton("B6");

		p1_1.add(b1);
		p1_1.add(b2);
		p1_1.add(b3);
		p1_1.add(b4);
		
		p1_2.add(b5);
		p1_2.add(b6);
		
		p.add(p1_1,BorderLayout.CENTER);//NORTH로하면 CENTER가 빈공간됨
		p.add(p1_2, "South");
		
		p1_2.setBackground(Color.pink);
		p1_1.setBackground(Color.yellow);

		p1_1.setLayout(new GridLayout(2,2,10,10));//2행2열 h,vgap 10
		p1_2.setLayout(new GridLayout(2,1,10,10));//2행1열		

		//바깥여백
		
		
		//창닫기
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}//MyLayout

	public static void main(String[] args) {
		MyLayout my=new MyLayout();
		my.setSize(500,500);
		my.setVisible(true);
	}//main()

}//
