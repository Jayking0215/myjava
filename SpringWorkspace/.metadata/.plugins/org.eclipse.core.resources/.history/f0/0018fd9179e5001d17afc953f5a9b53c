<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<!-- MessageImpl 빈을 등록하세요 id="mb1" 
		[1] setter injection ==> setter메서드를 이용해서 값(or 객체)을 주입한다.
		[2] constructor injection
		[3]
	-->
	<bean id="mb1" class="ex04.MessageImpl">
		<property name="name">
			<value>최길동</value>
		</property>
		<!-- mb1.setName("최길동"); 와 동일 -->
		<property name="greeting" value="좋은 하루 되세요~"/>
		<!-- mb1.setGreeting("좋은 하루 되세요~"); 와 동일 -->
	</bean>
	
	<!-- mb2 id로 MessageImpl빈을 하나 더 등록 
		이름, 인삿말 setter로 주입
	-->
	<bean id="mb2" class="ex04.MessageImpl">
		<property name="name">
			<value>마석두</value>
		</property>
		<property name="greeting" value="어 아직 싱글이야"></property>
	</bean>
	

</beans>
